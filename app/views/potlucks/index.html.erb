<p id="notice"><%= notice %></p>

<h1>Listing Potlucks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Description</th>
      <th>Date</th>
      <th>Time</th>
      <th>Party size</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @potlucks.each do |potluck| %>
      <tr>
        <td><%= potluck.name %></td>
        <td><%= potluck.location %></td>
        <td><%= potluck.description %></td>
        <td><%= potluck.date %></td>
        <td><%= potluck.time %></td>
        <td><%= potluck.party_size %></td>
        <td><%= potluck.user_id %></td>
        <td><%= link_to 'Show', potluck %></td>
        <td><%= link_to 'Edit', edit_potluck_path(potluck) %></td>
        <td><%= link_to 'Destroy', potluck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

